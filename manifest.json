{
  "manifest_version": 2,
  "name": "Cabulary",
  "version": "1.0",
  "description": "Create vocabulary flashcards of words you encounter while reading or surfing the web.",

  "browser_action": {
    "default_icon": {
      "19": "imgs/icon19.png",
      "38": "imgs/icon38.png"
    },
    "default_title": "Cabulary - A Vocabulary Tool",
    "default_popup": "popup.html"
  },
  
  "icons": {
    "32": "imgs/icon32.png",
    "48": "imgs/icon48.png",
    "128": "imgs/icon128.png"
  },

  "permissions": [
  	"storage",
  	"contextMenus",
  	"notifications",
  	"http://www.dictionaryapi.com/"
  ],

  "background": {
        "page":"background.html",
        "persistent": true
    },

  "author": "xaksis"
}